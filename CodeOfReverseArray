#include <iostream> 
using namespace std;
int main() 
{
  const int n = 5;
  int arr[n] = {3, 5, 2, 7, 22};
  int i = 0; int j = n-1;
  
  // repeat while ‘i<j’
  while (i<j) 
  {
    int temp = arr[i]; 
    arr[i] = arr[j]; 
    arr[j] = temp; i++;
    j--;
    
   }
   
   // print the array
    for(int i=0; i<n; i++) 
      cout << arr[i] << " ";

    return 0; 
    
    }
